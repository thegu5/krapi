{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"lib": ["ESNext"],
		"noEmit": true,
		"strict": true,
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"isolatedModules": true
	}
}
